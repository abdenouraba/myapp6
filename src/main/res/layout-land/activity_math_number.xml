<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_bck"
    tools:context=".math_number">

    <TextView
        android:id="@+id/textResul3"
        android:layout_width="340dp"
        android:layout_height="@dimen/dmn_60_dp"
        android:layout_below="@+id/grid"
        android:layout_alignStart="@+id/grid"
        android:layout_alignEnd="@+id/grid"
        android:layout_marginStart="@dimen/dmn_80_dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dmn_80_dp"
        android:background="@drawable/background_resulta_text"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#1ECF67"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sup" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textResul3"
        android:layout_alignEnd="@+id/textResul3"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="الـنتيجة :"
        android:textColor="#070707"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/textResul"
        app:layout_constraintTop_toTopOf="@+id/textResul" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_nbr"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dmn_20_dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:columnCount="10"
        android:foregroundGravity="center"
        android:rowCount="1">

        <Button
            android:id="@+id/b0"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="0"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b1"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="1"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b2"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="2"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b3"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="3"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b4"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="4"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b5"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="5"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b6"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="6"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b7"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="7"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b8"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="8"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="8"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/b9"
            android:layout_width="@dimen/dmn_50_dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="9"
            android:layout_margin="5dp"
            android:background="@drawable/button_etudient"
            android:text="9"
            android:textSize="36sp"
            android:textStyle="bold" />


    </GridLayout>

    <ImageView
        android:id="@+id/image_view_nbr"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dmn_120_dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/dmn_200_dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/backgraund_text"
        android:text="تعــرف على الأعـــداد التاليـــة    :      "
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_quiter"
        android:layout_width="@dimen/dmn_60_dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/dmn_30_dp"
        android:layout_marginTop="@dimen/dmn_30_dp"
        android:background="@drawable/iconback" />

</RelativeLayout>